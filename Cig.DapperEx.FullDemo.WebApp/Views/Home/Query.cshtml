<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>DapperEx 完整DEMO</title>
    @await Html.PartialAsync("HeadInclude")
</head>
<body>
    <section id="main-wrapper" class="theme-default">
        @await Html.PartialAsync("Header")
        @await Html.PartialAsync("Left")
        <!--main content start-->
        <section class="main-content-wrapper">
            <div class="pageheader">
                <h1>DapperEx 查询测试</h1>
                <div class="breadcrumb-wrapper hidden-xs">
                    <span class="label">您的位置:</span>
                    <ol class="breadcrumb">
                        <li>
                            <a href="javascript:;">DapperEx 完整DEMO</a>
                        </li>
                        <li>Tables</li>
                        <li class="active">数据查询</li>
                    </ol>
                </div>
            </div>
            <section id="main-content" class="animated fadeInUp">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">普通查询</h3>
                                <div class="actions pull-right">
                                    <i class="fa fa-expand"></i>
                                    <i class="fa fa-chevron-down"></i>
                                    <i class="fa fa-times"></i>
                                </div>
                            </div>

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Selects </h3>
                                    <div class="actions pull-right">
                                        <i class="fa fa-expand"></i>
                                        <i class="fa fa-chevron-down"></i>
                                        <i class="fa fa-times"></i>
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <select class="form-control input-sm" id="SelOption">
                                                <option value="0">Option类型</option>
                                                <option value="1">OptionA</option>
                                                <option value="2">OptionB</option>
                                            </select>
                                            <input class="form-control input-sm" id="TxtKeyword" style="margin-top:5px;"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <select class="form-control input-sm" id="SelDeleted">
                                                <option value="0">全部</option>
                                                <option value="1">True</option>
                                                <option value="2">False</option>
                                            </select>
                                            <input type="button" class="form-control" onclick="location = '/Home/Query?ordernum=' + $('#SelOption').val() + '&deleted=' + $('#SelDeleted').val() + '&keyword=' + $('#TxtKeyword').val()" style="margin-top:5px;" value="查询"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="panel-body">
                                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>名称</th>
                                            <th>备注</th>
                                            <th>创建时间</th>
                                            <th>ORDERENUM</th>
                                            <th>Id</th>
                                            <th>删除状态</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (Cig.DapperEx.FullDemo.Entity.DictInfo i in ViewBag.data)
                                        {
                                            <tr>
                                                <td>@i.DictName</td>
                                                <td>@i.Remark</td>
                                                <td>@i.CreateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                                <td>@i.OrderNum</td>
                                                <td>@i.DictID</td>
                                                <td>@i.Deleted</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </section>
        <!--main content end-->
    </section>
    @await Html.PartialAsync("SideBar")
    @await Html.PartialAsync("Config")
    @await Html.PartialAsync("FootInclude")
    <script>
        $(document).ready(function () {
            app.dateRangePicker();
            app.chartJs();
            app.weather();
            app.spinStart();
            app.spinStop();
        });
    </script>

</body>
</html>